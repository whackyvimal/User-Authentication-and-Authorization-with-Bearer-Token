{
  "info": {
    "name": "Auth JWT MVC",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "http://localhost:3000/api/auth/register", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","auth","register"] },
        "body": { "mode": "raw", "raw": "{\n  \"username\": \"alice\",\n  \"email\": \"alice@example.com\",\n  \"password\": \"Secret123\"\n}" }
      },
      "response": [
        { "name": "201", "body": "{\n  \"message\": \"User registered successfully\"\n}" }
      ]
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "http://localhost:3000/api/auth/login", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","auth","login"] },
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"alice@example.com\",\n  \"password\": \"Secret123\"\n}" }
      },
      "response": [
        { "name": "200", "body": "{\n  \"token\": \"<JWT_TOKEN>\",\n  \"expiresIn\": \"1h\"\n}" }
      ]
    },
    {
      "name": "Get Me",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer <JWT_TOKEN>" }],
        "url": { "raw": "http://localhost:3000/api/user/me", "protocol": "http", "host": ["localhost"], "port": "3000", "path": ["api","user","me"] }
      },
      "response": [
        { "name": "200", "body": "{\n  \"id\": \"<USER_ID>\",\n  \"username\": \"alice\",\n  \"email\": \"alice@example.com\"\n}" }
      ]
    }
  ]
}
